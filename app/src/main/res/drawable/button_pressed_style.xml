            <gradient android:startColor="@color/pressed_start_gradient" android:endColor="@color/pressed_end_gradient"
                android:angle="270" />
            <stroke   android:width="1px"          android:color="@color/pressed_border_button" />
            <corners android:bottomLeftRadius="@dimen/rounded_border"
