<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_gray"
    android:backgroundTint="@drawable/itv"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="@dimen/bottom_button_margin">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="11dp"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="ACERCA DE"
        android:textColor="@color/buttonTextColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="190dp"
        android:layout_height="174dp"
        android:layout_gravity="center"
        android:src="@drawable/guess_who" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="11dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Todos los Derechos Reservados 2017"
        android:textColor="@color/buttonTextColor"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="11dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Desarrollado por:"
        android:textAllCaps="false"
        android:textColor="@color/buttonTextColor"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="11dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text=">Martínez Cura Arturo de Jesús"
        android:textAlignment="viewStart"
        android:textColor="@color/buttonTextColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="11dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text=">Lázaro Velasco Raúl"
        android:textAlignment="viewStart"
        android:textColor="@color/buttonTextColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="11dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text=">Utrera Cruz Omar"
        android:textAlignment="viewStart"
        android:textColor="@color/buttonTextColor"
        android:textSize="18sp" />

    <Button
        style="@style/Theme.AppCompat.Light"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Volver" />

</LinearLayout>
