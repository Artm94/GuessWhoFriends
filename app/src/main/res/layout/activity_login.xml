<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/com_facebook_loginview_default_style"
        tools:context="com.example.arturo.guesswhofriends.LoginActivity">

        <ImageView
            android:id="@+id/imgLogo"
            android:contentDescription="@string/nothing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/fb_regular"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:minWidth="20dp"
            android:minHeight="20dp"
            android:maxWidth="150dp"
            android:maxHeight="150dp"/>

        <TextView
            android:id="@+id/txtLoginMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_text"
            android:text="@string/logfb_message"
            android:layout_below="@+id/imgLogo"
            style="@style/LoginFBMessageStyle"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btnLoginFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtLoginMessage"
            android:layout_margin="@dimen/regular_margin"
            style="@style/com_facebook_button"
            />

    </RelativeLayout>

</ScrollView>
