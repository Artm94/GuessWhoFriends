<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppNameStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/app_name</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/regular_margin</item>
        <item name="android:padding">@dimen/regular_padding</item>
    </style>
    <style name="PlayButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/regular_button_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:layout_marginRight">@dimen/right_button_margin</item>
        <item name="android:layout_marginLeft">@dimen/left_button_margin</item>
        <item name="android:layout_marginTop">@dimen/top_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/bottom_button_margin</item>
        <item name="android:background">@drawable/button_red_style</item>
    </style>
    <style name="LoginFBMessageStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/regular_margin</item>
        <item name="android:textColor">@color/activity_login_text</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:layout_marginTop">@dimen/top_button_margin</item>
        <item name="android:layout_marginRight">@dimen/right_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/bottom_button_margin</item>
        <item name="android:layout_marginLeft">@dimen/left_button_margin</item>
        <item name="android:textSize">@dimen/regular_button_text</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/button_style</item>
    </style>
    <style name="CharacterImage">
        <item name="android:minHeight">25dp</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:maxWidth">180dp</item>
        <item name="android:maxHeight">180dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">@dimen/regular_margin</item>
    </style>
</resources>
